{% extends 'adminLayout.twig'%}
{% set username = username %}
{% set pageTitle = 'Immo - Vastgoed Aanpassen' %}
{% block pageContent%}

    
        <h2>Vastgoed Aanpassen</h2>
        <ul class="breadcrumb">
            <li><a href="{{ app.url_generator.generate('adm.browse') }}">Overzicht</a> <span class="divider">/</span></li>
            <li class="active">Vastgoed aanpassen</li>
        </ul>
        {% form_theme editForm with 'form_errors.twig' %}
        <form id="editForm" action="#" method="post" {{ form_enctype(editForm) }}> 
            
            <div id="saveButtons">
                <button type="submit" name="submit" class="btn btn-large btn-success">
                    <i class="icon-white icon-ok"></i> Aanpassingen opslaan
                </button>
                <a href="{{ app.url_generator.generate('adm.browse') }}" class="btn btn-danger">
                    <i class="icon-white icon-remove"></i> Annuleren
                </a>
            </div>
            <div class="bs-docs-example">
            <ul id="myTab" class="nav nav-tabs">
              <li class="active"><a href="#1" data-toggle="tab">Locatie</a></li>
              <li class=""><a href="#2" data-toggle="tab">Informatie</a></li>
              <li class=""><a href="#3" data-toggle="tab">Aanbod</a></li>
              <li class=""><a href="#4" data-toggle="tab">Beschrijving</a></li>
              <li class=""><a href="#5" data-toggle="tab">Afbeeldingen</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
              <div class="tab-pane fade active in" id="1">
                <fieldset>
                    <legend>Locatie:</legend>
                    <dl> 
                        <dt>
                            {{ form_label(editForm.plaats) }}
                        </dt>
                        <dd class="clearfix">
                            {{ form_widget(editForm.plaats,{ 'attr': {'placeholder': 'Plaats'} }) }}
                            {{ form_errors(editForm.plaats) }}
                        </dd>
                        <dt>
                            {{ form_label(editForm.provincie) }}
                        </dt>
                        <dd class="clearfix">
                            {{ form_widget(editForm.provincie) }}
                            {{ form_errors(editForm.provincie) }}
                        </dd>
                        <dt>
                            {{ form_label(editForm.straat) }}
                        </dt>
                        <dd class="clearfix">
                            {{ form_widget(editForm.straat,{ 'attr': {'placeholder': 'Straat + nr'} }) }}
                            {{ form_errors(editForm.straat) }}
                        </dd>
                    </dl>
                    <ul class="pager">
                        <li><a class="next" href="#">Next</a></li>
                    </ul>
                </fieldset>
              </div>
              <div class="tab-pane fade " id="2">
                <fieldset>
                    <legend>Informatie:</legend>
                    <dl>
                        <dt>
                            {{ form_label(editForm.vastgoed_type) }}
                        </dt>
                        <dd class="clearfix">
                            {{ form_widget(editForm.vastgoed_type) }}
                            {{ form_errors(editForm.vastgoed_type) }}
                        </dd>
                        <div id="woningen">
                            <dt>
                                {{ form_label(editForm.bebouwing_type) }}
                            </dt>

                            <dd class="clearfix">
                                {{ form_widget(editForm.bebouwing_type) }}
                                {{ form_errors(editForm.bebouwing_type) }}
                            </dd>
                            <dt>
                                {{ form_label(editForm.aantal_slaapkamers) }}
                            </dt>
                            <dd class="clearfix">
                                {{ form_widget(editForm.aantal_slaapkamers) }}
                                {{ form_errors(editForm.aantal_slaapkamers) }}
                            </dd>
                            <dt>
                                {{ form_label(editForm.aantal_kamers) }}
                            </dt>
                            <dd class="clearfix">
                                {{ form_widget(editForm.aantal_kamers) }}
                                {{ form_errors(editForm.aantal_kamers) }}
                            </dd>
                            <dt>
                                {{ form_label(editForm.bouwjaar) }}
                            </dt>
                            <dd class="clearfix">
                                {{ form_widget(editForm.bouwjaar) }}
                                {{ form_errors(editForm.bouwjaar) }}
                            </dd>
                            <dt>
                                {{ form_label(editForm.garage) }}
                            </dt>
                            <dd class="clearfix">
                                {{ form_widget(editForm.garage) }}
                                {{ form_errors(editForm.garage) }}
                            </dd>
                        </div>
                        <dt>
                            {{ form_label(editForm.oppervlakte) }}
                        </dt>
                        <dd class="clearfix">
                            {{ form_widget(editForm.oppervlakte) }}
                            {{ form_errors(editForm.oppervlakte) }}
                        </dd>
                    </dl>
                    <ul class="pager">
                        <li><a class="prev" href="#">Previous</a></li>
                        <li><a class="next" href="#">Next</a></li>
                    </ul>
                </fieldset>
                </div>
                <div class="tab-pane fade" id="3">
                  <fieldset>
                      <legend>Aanbod:</legend>
                      <dl>
                          <dt>
                              {{ form_label(editForm.status_vastgoed) }}
                          </dt>
                          <dd class="clearfix">
                              {{ form_widget(editForm.status_vastgoed) }}
                              {{ form_errors(editForm.status_vastgoed) }}
                          </dd>
                          <dt>
                              {{ form_label(editForm.prijs) }}
                          </dt>
                          <dd class="clearfix">
                              {{ form_widget(editForm.prijs,{ 'attr': {'placeholder': 'Prijs'} }) }}
                              {{ form_errors(editForm.prijs) }}
                          </dd>
                      </dl>
                  </fieldset>
                        <ul class="pager">
                          <li><a class="prev" href="#">Previous</a></li>
                          <li><a class="next" href="#">Next</a></li>
                      </ul>
                </div>
                <div class="tab-pane fade" id="4">
                  <fieldset>
                      <legend>Beschrijving:</legend>
                      <dl>
                          <dt>
                              {{ form_label(editForm.beschrijving) }}
                          </dt>
                          <dd class="clearfix">
                              {{ form_widget(editForm.beschrijving,{ 'attr': { 'class': 'tinymce' } }) }}
                              {{ form_errors(editForm.beschrijving) }}
                          </dd>
                      </dl>
                      <ul class="pager">
                          <li><a class="prev" href="#">Previous</a></li>
                          <li><a class="next" href="#">Next</a></li>
                      </ul>
                      
                  </fieldset>
                </div>
                <div class="tab-pane fade" id="5">
                <fieldset>
                    <legend>Afbeeldingen:</legend>
                    <h5>Afbeeldingen Toevoegen</h5>
                    <p class="muted">Enkel *.jpg files</p>
                    <input name="filesToUpload[]" id="filesToUpload" accept="image/jpeg" type="file" multiple="" />
                    
                    
                    {% if images %}
                        <h5>Selecteer de afbeeldingen die u wilt Verwijderen</h5>
                        <div id="imageContainer" class="clearfix">
                            {% for key, image in images %}
                                <div class="img-polaroid image">
                                    
                                    <label for="editForm_delete_images_{{ key }}"><img alt="{{ image }}" title="{{ image }}" src="{{ app.request.baseUrl }}/uploads/{{ vastgoed_id }}/{{ image }}" /></label>
                                    {{ form_widget(editForm.delete_images[key],{ 'attr': { 'class': 'checkbox' } }) }}
                                </div>
                            {% endfor %}
                        </div> 
                    {% endif %}
                    <ul class="pager">
                        <li><a class="prev" href="#">Previous</a></li>
                    </ul>
                    {{ form_widget(editForm._token) }}
                        

                </fieldset>
              </div>
            </div>
          </div>
        </form>
{% endblock %}
