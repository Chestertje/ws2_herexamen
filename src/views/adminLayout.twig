<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="oldie ie6" lang="en"><![endif]-->
<!--[if IE 7 ]><html class="oldie ie7" lang="en"><![endif]-->
<!--[if IE 8 ]><html class="oldie ie8" lang="en"><![endif]-->
<!--[if IE 9 ]><html class="ie9" lang="en"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--><html lang="en"><!--<![endif]-->
<head>
        
	<title>{{ pageTitle|raw }}</title>
        <meta charset="UTF-8" />
	<meta http-equiv="cleartype" content="on" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	<link href="http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700,300italic&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/reset.css" />
        <link href="{{ app.request.baseUrl }}/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/admin.css" />
        
        
</head>
<body>
        <div id="header">
            <h1><a href="{{ app.request.baseUrl }}/">Immo Admin Panel</a></h1>
            {% if username %}
                <div id="topright"><p>Welkom {{ username }}!<a href="{{ app.url_generator.generate('auth.logout') }}"> Afmelden</a></p></div>
            {%endif%}
        </div>
        {% if username %}
            <div class="navbar">
                <div class="navbar-inner">
                  <ul class="nav">
                    <li class="{% if app.request.getPathInfo()|split('/')[2] == 'browse' %}active{% endif %}"><a href="{{ app.url_generator.generate('adm.browse') }}">Browse</a></li>
                    <li class="{% if app.request.getPathInfo()|split('/')[2] == 'add' %}active{% endif %}"><a href="{{ app.url_generator.generate('adm.add') }}">Vastgoed toevoegen</a></li>
                    <li class="{% if app.request.getPathInfo()|split('/')[2] == 'profile' %}active{% endif %}"><a href="{{ app.url_generator.generate('adm.profile') }}">Profiel aanpassen</a></li>
                  </ul>
                </div>
            </div>
        {%endif%}

        <div id="container">
		<div id="content">
		<!-- content -->
			
				{% block pageContent %}
					Hello!
				{% endblock %}
		</div>
	</div>

</body>
<script src="{{ app.request.baseUrl }}/js/jquery.js"></script>

<script src="{{ app.request.baseUrl }}/js/bootstrap.min.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/js/tinymce/tinymce.min.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/js/noty/jquery.noty.js"></script>

<script type="text/javascript" src="{{ app.request.baseUrl }}/js/noty/layouts/center.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/js/noty/layouts/top.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/js/noty/layouts/topCenter.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/js/noty/themes/default.js"></script>
<script type="text/javascript">
tinymce.init({
    selector: "input.tinymce"
 });

</script>
<script src="{{ app.request.baseUrl }}/js/javascript.js"></script>
</html>